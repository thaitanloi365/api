{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build-babel": "babel -d ./dist ./src -s  && cp -r ./src/Docs ./dist",
    "build": "yarn run clean && yarn run build-babel ",
    "prod": "NODE_ENV=production  babel-node ./dist/App.js ",
    "start": "yarn build && yarn prod",
    "server": "NODE_ENV=development nodemon --harmony ./src/App.js --exec babel-node",
    "db": "mongod --dbpath ~/data/db",
    "client": "cd ./src/client && yarn start ",
    "dev": "concurrently \"yarn db\" \"yarn server\" \"yarn client\"",
    "heroku": "git push heroku master"
  },
  "engines": {
    "node": ">= 10.x"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "dependencies": {
    "aws-sdk": "^2.480.0",
    "bluebird": "^3.5.5",
    "composable-middleware": "^0.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-session": "^1.16.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "method-override": "^3.0.0",
    "mongoose": "^5.6.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "nodemailer": "^6.2.1",
    "nodemailer-mailgun-transport": "^1.4.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "sharp": "^0.22.1",
    "swagger-ui-express": "^4.0.6",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/register": "^7.4.4",
    "babel-plugin-module-resolver": "^3.2.0",
    "concurrently": "^4.1.1"
  },
  "heroku-run-build-script": true
}
