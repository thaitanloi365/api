        },
        "email": {
          "type": "string",
          "example": "test@gmail.com"
        },
        "password": {
          "type": "string",
          "example": "123456"
        },
        "phone": {
          "type": "string",
          "example": "+12345678910"
        }
      }
    },
    "Device": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "example": "kdkdksjsjs"
        },
        "platform": {
          "type": "string",
          "enum": ["Android", "iOS"],
          "example": "Thai"
        },
        "uuid": {
          "type": "string",
          "example": "1111111"
        }
      }
    },
    "Item": {
      "type": "object",
